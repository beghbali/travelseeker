<script type="text/javascript">

  var lock = new Auth0Lock('MxKyQL0YDa80L8WwLWSjqZmnJ9qFojVK', 'zentrips.auth0.com');


  function signin() {
    lock.show({
      <% if Rails.env.development? %>
        callbackURL: 'http://localhost:3000/auth/auth0/callback'
      <% else %>
        callbackURL: 'https://tryzentrips.com/auth/auth0/callback'
      <% end %>
      , responseType: 'code'
      , authParams: {
        scope: 'openid profile'
      }
    });
  }
</script>